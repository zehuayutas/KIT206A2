<Window x:Class="HRIS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HRIS"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800" ResizeMode="CanResize" MinHeight="1200" MinWidth="1200">
    <Grid>
       
        <TabControl Name="tabControl" TabStripPlacement="Top" SelectionChanged="TabControl_SelectionChanged" Grid.ColumnSpan="2" Margin="0,0,0,0.5"  >
            <TabItem Name ="staffTab" Header="Staff" Margin="-10,0,-10,0" Width="100"/>
            <TabItem  Name ="unitTab" Header="Unit" Margin="10,0,-10,0" Width="100" />
        </TabControl>
        
    </Grid>
</Window>
